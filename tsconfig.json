{
    "compilerOptions": {
        "target": "ES2015",
        "moduleResolution": "Node",
        "lib": ["es2015", "DOM"],
        "outDir": "./app/static/js/",
        "rootDirs": ["./app/static/typescript", "./app/static/js"],
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "./app/static/js/*.js",
    ],
    "watchOptions": {
        "watchFile": "useFsEvents"
    }
}