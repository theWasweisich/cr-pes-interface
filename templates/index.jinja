<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- CSS Files -->
    
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    
    <link rel="stylesheet" href="/static/css/external/w3.css">
    
    <link rel="stylesheet" href="/static/css/index.css">

    <link rel="stylesheet" href="/static/css/index_crepecontrol.css">
    
    
    <link rel="stylesheet" href="/static/css/global.css">
    
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <!-- JS Files -->

    <script src="/static/js/index.js" defer></script>
    <script src="/static/js/sell_buttons.js" defer></script>
    <script src="/static/js/global.js"></script>
    
    <title>Crêpes</title>
    
</head>
<body>
    
    <header>
        <h1>
            <span class="header-icon">point_of_sale</span>
            <p>Kasse</p>
        </h1>
        <div class="header-nav-bar">
            <button type="button" class="crepe-button" href="/" class="active">Kasse</button>
            <button type="button" class="crepe-button" href="/einstellungen">Einstellungen</button>
            <button type="button" class="crepe-button disabled" href="/schichten" disabled>Schichten</button>
        </div>
        <p id="clock"></p>
        <script>
            const clock = document.getElementById("clock");

            function setTime() {
                // console.log("Clock test")
                var date = new Date();
    
                var hours = date.getHours();
                var mins = date.getMinutes();
    
                if (hours < 10) {
                    var hours = "0" + String(hours);
                }
                if (mins < 10) {
                    var mins = "0" + String(mins);
                }
    
                clock.innerText = `${hours}:${mins} Uhr`;
            }

            setTime()
            setInterval(setTime, 30000)
        </script>

    </header>

    <div id="popup-alert"> <!-- Add class activate to show! -->
        <p>Es gab einen Fehler! Bitte erneut versuchen!</p>
    </div>

    <div id="main">
        <div id="content">
            <div id="main-content">
                {% for crepe in crepes %}
                <div class="crepe_container" data-name="{{ crepe['name'] }}" data-preis="{{ crepe['price'] }}" data-color="{{ crepe['colour'] }}" data-id="{{ crepe['id'] }}" onload="set_data(this);">
                    <div class="crepecontrol">
                        <button class="remove">-</button>
                        <button class="add">+</button>
                        <p class="crepes_counter"></p>
                    </div>
                    <h4 type="name">{{ crepe['name'] }}</h4>
                    
                    <p type="price">[PREIS]</p>
                </div>
                {% endfor %}
            </div>
    
        </div>

        <div id="side_nav">
            
            <p class="side-nav-menu">Bestellung<span class="collapse_sidemenu"><a href="/help_page"><span class="material-symbols-outlined">question_mark</span></a></span></p>
            
            <div id="sell_buttons">
                <button data-function="payed">Bezahlt</button>
                <button data-function="pay_back">Rückgeld</button>
                <button data-function="own_consumption">Eigenverbrauch</button>
                <button data-function="reset">Zurücksetzen</button>
            </div>
    
            <h2>Gesamt: <span>0 €</span>
            </h2>
            <table id="crepe_table">
                <tr data-id="XXX">
                    <th>Anzahl</th>
                    <th style="width: 60%;">Art</th>
                    <th>Preis</th>
                </tr>
            </table>
    
        </div>
    </div>
    
    <div id="test_eck"></div>
    <div id="test_eck_deux"></div>

    <script defer>
        const main_elem = document.getElementById('main');
        const main_content_elem = document.getElementById('main-content');

        function reset_main_content() {
            console.log("HI")
            main_content_elem.style.maxWidth = main_elem.clientWidth;
        }

        window.onresize = reset_main_content
    </script>
</body>

</html>